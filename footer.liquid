<script>
  /* 少しスクロールでTOPに戻るボタン表示 */
  function toggleBanner() {
    const scroll = window.pageYOffset;
    const returnTop = document.querySelector('.footer_return_top');
    if (scroll > 100) {
      returnTop.classList.add('open');
    } else if (scroll <= 100) {
      returnTop.classList.remove('open');
    }
  }

  window.addEventListener('scroll', () => {
    toggleBanner();
  });

  window.addEventListener('DOMContentLoaded', () => {
    toggleBanner();
  });
</script>

