<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap');
  #site_footer {
    width: 100%;
    top: 0;
    z-index: 100;
    background: transparent;
    transform: translateY(0); /* 初期状態は表示 */
    transition: transform 0.3s ease-in-out; /* スムーズなアニメーション */
    margin-bottom: 10em;
    position: realtive;
    font-family: 'Noto Sans JP', sans-serif;
    padding: 0 4em;
    max-width: var(--page-width);
    margin: auto;

    .footer_top_block {
      background: #fff;
      height: 48px;
      position: relative;
      margin-top: 2em;
    }

    /* ---- メインナビ ---- */
    .nav-main {
      display: flex;
      gap: 3em;
      align-items: center;
      font-family: sans-serif;
      margin: auto;
      font-weight: 600;
    }
  }
</style>

<style>
  html {
    scroll-behavior: smooth;
  }

  .footer_top_bar {
    padding: 2em 0;
    justify-content: center;
    width: 100%;
    display: block !important;
    background: #000;
  }

  #site_footer {
    ul {
      margin: 0;
      padding: 0;
    }
    li {
      list-style: none;
    }

    a {
      text-decoration: none;
      color: #000;
    }

    a:hover {
      opacity: 0.6;
    }

    div:empty {
      display: block;
    }

    .footer_link_block {
      display: flex;
    }

    .footer_link_block ul {
      margin-right: 8em;
    }

    .footer_link_block li {
      line-height: 1;
      margin-bottom: 1em;
    }

    .footer_link_block li a {
      color: #000;
    }

    .footer_bottom_block {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .footer_payment_list {
      display: flex;
      width: 100%;
      flex-wrap: wrap;
    }

    .footer_payment_list li {
      margin-right: 1em;
    }

    .additional_payment {
      width: 38px;
      height: 24px;
      border: 1px solid #dddddd;
      border-radius: 4px;
    }

    .footer_logo_copy_right {
      font-weight: 600;
      color: #000;
    }
  }
</style>

<style>
  /* ---- レスポンシブ ---- */
  @media (max-width: 749px) {
    .footer_top_bar {
      padding: 4vw;
    }
    #site_footer {
      padding: 0 2em;

      .nav-main {
        align-items: center;
        font-family: sans-serif;
        margin: auto;
        display: grid;
        gap: 1em;
      }

      .nav-main a {
        font-size: 2.6vw;
      }

      .footer_top_block {
        flex-direction: column;
        height: auto;
      }

      .footer_link_block {
        display: block;
      }

      .footer_link_block ul {
        margin-right: 0;
      }

      .footer_link_block li a {
        font-size: 2.6vw;
      }

      .footer_bottom_block {
        display: block;
      }

      .footer_sp_link_block {
        display: flex;
        justify-content: space-around;
        align-items: baseline;
      }

      .footer_payment_list {
        margin-top: 2em;
        margin-bottom: 2em;
        justify-content: center;
      }

      .footer_logo_block img {
        width: 36vw;
      }

      .footer_logo_copy_right {
        font-size: 3vw;
      }
    }
  }
</style>

<style>
  /* topへ戻るボタン */
  .footer_return_top {
