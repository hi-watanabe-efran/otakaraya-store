<script>
  document.querySelectorAll('.faq-q').forEach((btn) => {
    const content = btn.nextElementSibling;

    /* 進行中の requestAnimationFrame と transitionend を管理 */
    let rafId = null;
    let tidyFn = null;

    const stopAnim = () => {
      /* ① まだ実行されていない rAF があれば無効化 */
      if (rafId !== null) {
        cancelAnimationFrame(rafId);
        rafId = null;
      }
      /* ② transitionend コールバックも外す */
      if (tidyFn) {
        content.removeEventListener('transitionend', tidyFn);
        tidyFn = null;
      }
    };

    btn.addEventListener('click', () => {
      stopAnim(); // ← ここがポイント
      const expanded = btn.getAttribute('aria-expanded') === 'true';

      if (expanded) {
        /* ---------- 閉じる ---------- */
        btn.setAttribute('aria-expanded', 'false');
        btn.querySelector('.faq-icon').textContent = '＋';

        /* 現在の高さを固定して 0 へ縮める */
        content.style.maxHeight = content.scrollHeight + 'px';
        rafId = requestAnimationFrame(() => {
          content.style.maxHeight = '0';
          content.classList.remove('open');
          rafId = null;
        });
      } else {
        /* ---------- 開く ---------- */
        btn.setAttribute('aria-expanded', 'true');
        btn.querySelector('.faq-icon').textContent = '－';

        /* 閉じた状態から開始（高さ 0・padding 0）*/
        content.classList.add('open'); // padding 復活
        content.style.maxHeight = '0';

        /* 次フレームで実寸へ */
        rafId = requestAnimationFrame(() => {
          content.style.maxHeight = content.scrollHeight + 'px';
          rafId = null;
        });

        /* 終了後に max-height:none へリセット */
        tidyFn = (e) => {
          if (e.propertyName === 'max-height') {
            content.style.maxHeight = 'none';
            content.removeEventListener('transitionend', tidyFn);
            tidyFn = null;
          }
        };
        content.addEventListener('transitionend', tidyFn);
      }
    });
  });
</script>
