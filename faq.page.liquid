<style>
  .faq-section {
    background: #f1f1ee;
    padding: 60px 0;
  }
  .faq-section h1 {
    text-align: center;
    font-family: 'Noto Sans JP';
    letter-spacing: 2px;
    font-size: 40px;
  }

  .faq-section h1 span.sub_title {
    font-size: 0.6em;
  }
  .faq-block {
    padding: 1rem 0;
  }
  .faq-section h2 {
    font-family: 'Noto Sans JP';
  }
  .faq-accordion {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 5%;
  }
  .faq-item {
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 18px;
    background: #fff;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.02);
  }
  .faq-q {
    display: flex;
    align-items: center;
    background: #000;
    color: #fff;
    padding: 0 6px;
    border: none;
    width: 100%;
    cursor: pointer;
    transition: background 0.2s;
    position: relative;
    font-family: 'Noto Sans JP';
    gap: 12px;
  }

  .faq-q .faq-label-q {
    font-size: 3rem;
    font-weight: bold;
    width: 48px;
    height: 36px;
    min-width: 48px;
    line-height: 1;
  }

  .faq-q h3.faq-q-text {
    padding: 0 30px 0 0px;
    flex-grow: 1;
    text-align: left;
    color: white;
    font-size: 16px;
    font-family: 'Noto Sans JP';
  }
  .faq-q .faq-icon {
    font-size: 1.6rem;
    padding: 0 18px 0 10px;
    transition: transform 0.2s;
    user-select: none;
    position: absolute;
    right: 0;
  }
  .faq-q[aria-expanded='true'] .faq-icon {
    transform: rotate(0deg);
  }
  /* 開閉アニメーションを滑らかに */
  .faq-a {
    background: #fff;
    overflow: hidden;
    max-height: 0; /* ← height ではなく max-height を 0 スタート */
    opacity: 0;
    transition: max-height 0.45s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease,
      padding 0.45s cubic-bezier(0.4, 0, 0.2, 1);
    margin: 0;
    padding: 0 6px; /* 閉じた状態はパディング 0 */
    border-radius: 0 0 4px 4px;
    border-top: 1px solid #ededed;
  }
  .faq-a.open {
    opacity: 1;
  }
  .faq-a-body {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 26px 0; /* 開いたときのパディング */
  }

  .faq-a .faq-label-a {
    font-size: 3rem;
    font-weight: bold;
    width: 48px;
    display: block;
    text-align: center;
    line-height: 1;
    font-family: 'Noto Sans JP';
  }
  .faq-a .faq-a-content {
    flex: 1 1 0%;
    min-width: 0;
  }
  .faq-a .faq-a-content a {
    color: black;
  }
  .faq-a h3.faq-block-title {
    font-weight: bold;
    margin: 0;
    font-size: 16px;
    font-family: 'Noto Sans JP';
  }
  .faq-a ol {
    counter-reset: marunum; /* 独自カウンターをリセット */
    list-style: none;
    padding-left: 0;
    margin: 10px 0;
  }
  .faq-a ol li {
    position: relative;
    padding-left: 2em;
    counter-increment: marunum;
  }
  .faq-a ol li::before {
    content: '①';
    position: absolute;
    left: 0;
    top: 0;
    font-weight: bold;
    color: #222;
    font-size: 1.12em;
    line-height: 1.5;
  }
  .faq-a ol li:nth-child(2)::before {
    content: '②';
  }
  .faq-a ol li:nth-child(3)::before {
    content: '③';
  }
  .faq-a ol li:nth-child(4)::before {
    content: '④';
  }
  .faq-a ol li:nth-child(5)::before {
    content: '⑤';
  }
  .faq-a ol li:nth-child(6)::before {
    content: '⑥';
  }
  .faq-a ol li:nth-child(7)::before {
    content: '⑦';
  }
  .faq-a ol li:nth-child(8)::before {
    content: '⑧';
  }
  .faq-a ol li:nth-child(9)::before {
    content: '⑨';
  }
  .faq-a ol li:nth-child(10)::before {
    content: '⑩';
  }

  @media (max-width: 750px) {
    .faq-q .faq-q-text {
      padding: 0 8px;
    }
    .faq-a,
    .faq-a.open {
      padding-left: 8px;
      padding-right: 8px;
      gap: 8px;
    }
    .faq-a .faq-label-a {
      margin-bottom: 4px;
      margin-right: 0;
    }

    .faq-q .faq-label-q {
      font-size: 2.4rem;
    }

    .faq-a .faq-label-a {
      font-size: 2.4rem;
    }
  }
</style>

